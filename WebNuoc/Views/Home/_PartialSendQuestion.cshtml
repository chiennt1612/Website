@using WebNuoc.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model EntityFramework.Web.Entities.Contact

<style>
    .text-success {
        color: #28a745 !important;
    }

    a.text-success:hover, a.text-success:focus {
        color: #19692c !important;
    }

    .text-info {
        color: #17a2b8 !important;
    }

    a.text-info:hover, a.text-info:focus {
        color: #0f6674 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    a.text-warning:hover, a.text-warning:focus {
        color: #ba8b00 !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

    a.text-danger:hover, a.text-danger:focus {
        color: #a71d2a !important;
    }
    input.input-validation-error {
        border-color: #dc3545;
        color: #dc3545;
    }
</style>

<div class="contact-form">

    <div class="title">@Localizer["Gửi câu hỏi"]</div>
    @*<div asp-validation-summary="All"></div>*@
    <form asp-action="FAQ" asp-controller="Home">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-right">@Localizer["Gửi câu hỏi"]</label>
            <div class="col-md-7 col-sm-6">
                <span asp-validation-for="CompanyName" class="text-danger"></span>
                <input asp-for="CompanyName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-md-3 col-sm-4 col-form-label text-right"></label>

            <div class="col-md-7 col-sm-6">
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea rows="10" asp-for="Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Fullname" class="col-sm-3 col-form-label text-right"></label>
            <div class="col-lg-6 col-md-8 col-sm-9">
                <span asp-validation-for="Fullname" class="text-danger"></span>
                <input asp-for="Fullname" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-3 col-form-label text-right"></label>
            <div class="col-lg-6 col-md-8 col-sm-9">
                <span asp-validation-for="Address" class="text-danger"></span>
                <input asp-for="Address" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-3 col-form-label text-right"></label>
            <div class="col-lg-6 col-md-8 col-sm-9">
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Mobile" class="col-sm-3 col-form-label text-right"></label>
            <div class="col-lg-6 col-md-8 col-sm-9">
                <span asp-validation-for="Mobile" class="text-danger"></span>
                <input asp-for="Mobile" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label text-right"></label>
            <div class="col-lg-6 col-md-8 col-sm-9">
                <button type="submit" class="btn btn-primary text-16">@Localizer["Gửi ý kiến"]</button>
            </div>
        </div>
    </form>

</div><!--form-->