<section id="services-grid">
    <div class="container">
        <div class="title-other-service">
            <h2>@Localizer["Các dịch vụ khác"]</h2>
        </div><!--other-service-->
        <div class="row">
            @foreach (var item in Model._Related)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                    <a asp-action="Details" asp-controller="Service" asp-route-Id="@item.Id" class="item">
                        <img src="@item.Img" alt="@item.Title">
                        <div class="bg">
                            <b class="name">@item.Title</b>
                            <span class="button">@Localizer["Dịch vụ công"]</span>
                        </div>
                    </a><!--item-->
                </div>
            }
        </div>
    </div>
</section>