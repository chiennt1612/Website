@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IList<EntityFramework.Web.Entities.Article>

<div class="news col-lg-6 col-md-12">
    <div class="content-box">
        <div class="title"><i class="fa fa-newspaper"></i> <h2>@Localizer["TIN TỨC - SỰ KIỆN"]</h2></div>
        <div class="row">
            @if (Model.Count > 0)
            {
                <div class="first col-sm-6 col-12">
                    <a asp-controller="News" asp-action="Details" asp-route-Id="@Model[0].Id" class="img">
                        <img src="@Model[0].Img" alt="@Model[0].Title" />
                    </a>
                    <a asp-controller="News" asp-action="Details" asp-route-Id="@Model[0].Id" class="name mb-2">
                        @Model[0].Title
                    </a>
                    <p class="mb-1">@Model[0].DateCreator.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="summary">@Html.Raw(Model[0].Summary)</p>
                    <p class="viewmore text-right">
                        <a asp-controller="News" asp-action="Details" asp-route-Id="@Model[0].Id">@Localizer["Xem thêm..."]</a>
                    </p>
                </div>
            }

            <div class="list col-sm-6 col-12">
                @for (var i = 1; i < Model.Count; i++)
                {
                    <div class="item">
                        <a asp-controller="News" asp-action="Details" asp-route-Id="@Model[i].Id">
                            <span class="img-wrap">
                                <span class="img">
                                    <img src="@Model[i].Img" alt="@Model[i].Title" />
                                </span>
                            </span>
                            <span class="name">
                                @Model[i].Title
                                <span style="display:block; margin-top:5px; font-weight:normal;">@Model[i].DateCreator.ToString("dd/MM/yyyy HH:mm")</span>
                            </span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
