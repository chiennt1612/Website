@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<EntityFramework.Web.Entities.Adv>
<!--Thanh - Thêm ảnh dự án -->
@if (Model.Count() > 0)
{
    <section id="image-home-carousel">
        <div class="container">
            <h2>@Localizer["ẢNH VỀ DỰ ÁN NƯỚC SẠCH"]</h2>
            <p class="summary">@Localizer["Cập nhật những hình ảnh mới nhất về dự án"]</p>
            <div class="owl-carousel owl-theme">
                @foreach (var item in Model)
                {
                    <div class="item">
                        <!--<img border=0 src="@item.Img" width='1000' height='666' alt="@item.CustomerName"/>-->
                        <a href="@item.Img" target="_blank"><img src="@item.Img" alt="@item.CustomerName" /></a>
                        <a href="@item.Img" target="_blank"><p style="padding-top:15px;">@item.CustomerName</p></a>
                    </div>
                }
            </div>
        </div>
    </section>
}
