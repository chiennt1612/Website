@using Paygate.OnePay
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model EntityFramework.Web.Entities.Contact

@{
    ViewData["Title"] = Localizer["Chi tiết"];
}

<h1>@Localizer["Chi tiết"]</h1>

<div>
    <h4>@Localizer["Đăng ký dịch vụ"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactDate)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw((Model.ContactDate.HasValue ? Model.ContactDate.Value.ToString("dd/MM/yyy HH:mm") : ""))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mobile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCompany)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Services)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Services.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw((Model.Price.HasValue ? Model.Price.Value.ToString().FormatNumber() : ""))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusId)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw((Model.OrderStatus != null ? Model.OrderStatus.Name : ""))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Noted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Noted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Img)
        </dt>
        <dd class="col-sm-10">
            @if (!String.IsNullOrEmpty(Model.Img))
            {
                <img src="@Model.Img" width="200">
            } 
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Noted2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Noted2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Img2)
        </dt>
        <dd class="col-sm-10">
            @if (!String.IsNullOrEmpty(Model.Img2))
            {
                <img src="@Model.Img2" width="200">
            }
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Sửa"]</a> |*@
    <a asp-action="Register">@Localizer["Quay lại danh sách"]</a>
</div>