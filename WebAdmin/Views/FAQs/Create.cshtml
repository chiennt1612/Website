@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model EntityFramework.Web.Entities.FAQ

@{
    ViewData["Title"] = Localizer["Thêm mới"];
}

<h1>@Localizer["Thêm mới"]</h1>

<h4>@Localizer["Hỏi đáp"]</h4>
<hr />
<div class="row">
