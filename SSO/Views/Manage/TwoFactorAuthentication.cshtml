@model SSO.Models.ManageViewModels.TwoFactorAuthenticationViewModel
@{
    ViewData["Title"] = "Đăng ký đăng nhập với OTP";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
}

<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>Bạn đã hết mã khôi phục.</strong>
            <p>Bạn cần <a asp-action="GenerateRecoveryCodes"> tạo thêm mã khôi phục</a> trước khi bạn đăng nhập với mã khôi phục.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>Bạn chỉ còn 1 mã khôi phục.</strong>
            <p>Bạn nên <a asp-action="GenerateRecoveryCodes"> tạo thêm mã khôi phục</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>Bạn chỉ còn @Model.RecoveryCodesLeft mã khôi phục.</strong>
            <p>Bạn nên <a asp-action="GenerateRecoveryCodes"> tạo thêm mã khôi phục</a>.</p>
        </div>
    }

    <a asp-action="Disable2faWarning" class="btn btn-default">Hủy đăng nhập OTP</a>
    <a asp-action="GenerateRecoveryCodesWarning" class="btn btn-default">Xóa mã khôi phục</a>
}

<h5>Ứng dụng mã OTP</h5>
@if (!Model.HasAuthenticator)
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Thêm ứng dụng mã OTP</a>
}
else
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Cấu hình ứng dụng mã OTP</a>
    <a asp-action="ResetAuthenticatorWarning" class="btn btn-default">Hủy cấu hình ứng dụng mã OTP</a>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
